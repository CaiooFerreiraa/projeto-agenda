<%- include('includes/header') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center ">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o logo abaixo</p>

      <%- include('includes/msg') %>

      <div class="responsive-table">
        <table class="table my-3">
          
          <% contatos.forEach(contato => { %>
            <tr>
              <td><%= contato.nome %></td>
              <td><%= contato.sobrenome %></td>
              <td><%= contato.email %></td>
              <td><%= contato.telefone %></td>
              <td><a href="/contato/<%= contato._id %>">editar</a></td>
              <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">deletar</a></td>
            </tr>
          <% }) %>
          
        </table>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>